<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.WizeWallet" parent="Theme.AppCompat.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_style">
        <item name="fontFamily">@font/poppins</item>
    </style>


    <style name="bgRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">47dp</item>
        <item name="color">#fff</item>
    </style>

    <style name="contactFont">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:letterSpacing">0.1</item>
    </style>


    <style name="menu_list_items">
        <item name="android:textSize">14sp</item>
        <item name="color">@color/menu_list_text</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="balance_text">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="icon_sizes">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">59dp</item>
    </style>

    <style name="icon_texts">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">13dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#818197</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>


</resources>