<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/spinner_photo_item"
        android:layout_width="54dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/transaction_icon_three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/parent_request_message_tv"
        android:layout_width="296dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/spinner_photo_item"
        android:text="Transaction"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinner_photo_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/parent_request_amount_tv"
        android:layout_width="297dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:text="amount"
        app:layout_constraintEnd_toEndOf="@+id/parent_request_message_tv"
        app:layout_constraintStart_toEndOf="@+id/spinner_photo_item"
        app:layout_constraintTop_toBottomOf="@+id/parent_request_message_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
