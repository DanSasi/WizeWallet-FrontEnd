<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimg"
    tools:context=".Fragments.AddChildFragment">

    <Button
        android:id="@+id/addChild_btn"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="ADD"
        android:background="@drawable/backgroundimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_child_password"
        app:layout_constraintVertical_bias="0.263" />

    <EditText
        android:id="@+id/add_child_username"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:hint="Child User Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_child_password"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:password="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_child_balance"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="119dp"
        android:ems="10"
        android:hint="Child Balance"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_child_id"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="120dp"
        android:ems="10"
        android:hint="Child Id"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_child_balance" />

</androidx.constraintlayout.widget.ConstraintLayout>