<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.BalanceScreen"
    android:padding="40dp"
    android:background="@drawable/backgroundimg">


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/rv_balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/textView"
            style="@style/balance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:lineHeight="45px"
            android:text="Your Balance"
            android:textAlignment="center"
            android:textSize="19dp"
            android:textColor="#818197"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            style="@style/balance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nis 10,000"
            android:textAlignment="center"
            android:textColor="#2C2C63"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                style="@style/icon_sizes"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/transfer"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                style="@style/icon_sizes"
                android:layout_marginStart="33dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/topup" />

            <ImageView

                android:id="@+id/imageView6"
                style="@style/icon_sizes"
                android:layout_marginStart="33dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:src="@drawable/tipsimage"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <ImageView
                android:id="@+id/imageView8"
                style="@style/icon_sizes"
                android:layout_marginStart="33dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="28dp"
                android:layout_weight="1"
                android:src="@drawable/more"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                style="@style/icon_texts"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:text="Transfer"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView7"
                style="@style/icon_texts"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:text="Tasks"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView8"
                style="@style/icon_texts"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:text="Tips"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/text_more"
                style="@style/icon_texts"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:text="More"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/textView9"
        style="@style/balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Transactions"
        android:textColor="#818197"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        tools:layout_editor_absoluteX="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>