<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TopUpScreen"
    android:background="@drawable/backgroundimg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80px"
        android:lineHeight="18sp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#082431"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        />

    <ImageView
        android:id="@+id/topuparrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="#200E32"
        android:src="@drawable/leftarrow"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.144" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="550px"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="185sp"
            android:textAlignment="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25sp">

            <androidx.cardview.widget.CardView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginLeft="125sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="100sp"
                app:cardBackgroundColor="#B548C6"
                app:cardCornerRadius="18sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="18sp"
                    android:layout_marginRight="20sp"
                    android:src="@drawable/star" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55sp"
                android:layout_marginTop="90sp"
                android:layout_marginRight="25sp"
                android:fontFamily="@font/poppins"
                android:text="Tasks"
                android:textAlignment="center"
                android:textColor="#2C2C63"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47sp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/poppins"
                android:lineHeight="21sp"
                android:text="List of your tasks:"
                android:textAlignment="center"
                android:textColor="#2C3A4B"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140sp"
                android:layout_marginTop="152sp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#2C3A4B" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="195sp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25sp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/poppins"
                android:lineHeight="21sp"
                android:text=""
                android:textColor="#2C3A4B"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="93sp"
                android:layout_marginTop="40sp"
                android:fontFamily="@font/poppins"
                android:lineHeight="37sp"
                android:text=""
                android:textColor="#273240"
                android:textSize="34sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95sp"
                android:layout_marginTop="95sp"
                android:lineHeight="20sp"
                android:text=""
                android:textColor="#2C3A4B"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="308sp"
                android:layout_height="65sp"
                android:layout_marginTop="130sp"
                app:cardBackgroundColor="#979797">

                <androidx.cardview.widget.CardView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="14sp"
                    app:cardBackgroundColor="#FFBF47"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginLeft="9sp"
                        android:layout_marginTop="9sp"
                        android:src="@drawable/doc" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="82sp"
                    android:layout_marginTop="18sp"
                    android:fontFamily="@font/poppins"
                    android:lineHeight="16sp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="315sp"
        android:layout_height="64sp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@null"
        android:background="@drawable/btn_main"
        android:fontFamily="@font/poppins"
        android:text="Done"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        />
    <Button
        android:id="@+id/btn_more"
        android:layout_width="315sp"
        android:layout_height="64sp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@null"
        android:background="@drawable/round1"
        android:fontFamily="@font/poppins"
        android:text="Tap to more money"
        android:textColor="#525298"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        />


</androidx.constraintlayout.widget.ConstraintLayout>