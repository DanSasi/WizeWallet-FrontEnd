<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.child.ChildAddTransactionFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="134dp"
        android:layout_height="107dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/wizewallet_icon"
        android:translationX="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_back_arrow_contact"
        android:layout_width="14dp"
        android:layout_height="18dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="88dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_arrow___left"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/add_transaction_btn"
        android:layout_width="114dp"
        android:layout_height="79dp"
        android:background="@drawable/btn_main"
        android:text="save"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:translationX="150dp"
        android:translationY="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_child_password_et"
        app:layout_constraintVertical_bias="0.368" />

    <EditText
        android:id="@+id/add_transaction_description_et"
        android:layout_width="303dp"
        android:layout_height="68dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="404dp"
        android:background="@drawable/search_bar"
        android:drawableLeft="@drawable/location_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Where did you pay?"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:context=".MapsActivity" />

    <EditText
        android:id="@+id/parent_add_transaction_amount_et"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/search_bar"
        android:drawableLeft="@drawable/money_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="How much did you pay?"

        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</FrameLayout>