<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/spinner_photo_item"
        android:layout_width="54dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/icon_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/parent_task_task_tv"
        android:layout_width="256dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/spinner_photo_item"
        android:text="Task"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/is_completed_task"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinner_photo_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_task_amount_kid_tv"
        android:layout_width="254dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="amount"
        app:layout_constraintEnd_toStartOf="@+id/is_completed_task"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinner_photo_item"
        app:layout_constraintTop_toBottomOf="@+id/parent_task_task_tv" />

    <CheckBox
        android:id="@+id/is_completed_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/child_task_amount_kid_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />


</androidx.constraintlayout.widget.ConstraintLayout>