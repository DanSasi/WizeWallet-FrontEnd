<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f8"
    app:layout_constraintHorizontal_bias="0.57"
    tools:context=".WithdrawScreen">

    <TextView
        android:id="@+id/txt_Withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/main_topic"
        android:textColor="#082431"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins"
        android:text="@string/amount"
        android:textColor="#2C2C63"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Withdraw" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/accBalance"
        android:textColor="#546E7A"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:letterSpacing="0.1"
        android:text="@string/chooseBank"
        android:textColor="#082431"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal">

            <ImageView
                android:id="@+id/box_1"
                android:layout_width="340dp"
                android:layout_height="84dp"
                android:contentDescription="TODO"
                android:src="@drawable/boxlayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/ic_personal_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_group_4"
                app:layout_constraintBottom_toBottomOf="@+id/box_1"
                app:layout_constraintEnd_toEndOf="@+id/box_1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/box_1"
                app:layout_constraintTop_toTopOf="@+id/box_1"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tv_personal_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:letterSpacing="0.04"
                android:text="Personal Account"
                android:textSize="14sp"
                android:textColor="#707070"
                app:layout_constraintBottom_toBottomOf="@+id/box_1"
                app:layout_constraintEnd_toEndOf="@+id/box_1"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toEndOf="@+id/ic_personal_acc"
                app:layout_constraintStart_toStartOf="@+id/box_1"
                app:layout_constraintTop_toTopOf="@+id/box_1"
                app:layout_constraintVertical_bias="0.3" />

            <RadioButton
                android:id="@+id/radioButton_personalAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:button="@drawable/radio_btn"
                app:layout_constraintBottom_toBottomOf="@+id/box_1"
                app:layout_constraintEnd_toEndOf="@+id/box_1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_personal_acc"
                app:layout_constraintStart_toStartOf="@+id/box_1"
                app:layout_constraintTop_toTopOf="@+id/box_1"
                tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/box_2"
                android:layout_width="340dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                android:contentDescription="TODO"
                android:src="@drawable/boxlayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/box_1"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/ic_business_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_iconacc"
                app:layout_constraintBottom_toBottomOf="@+id/box_2"
                app:layout_constraintEnd_toEndOf="@+id/box_2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/box_2"
                app:layout_constraintTop_toTopOf="@+id/box_2"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.04"
                android:text="Business Account"
                android:textColor="#707070"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/box_2"
                app:layout_constraintEnd_toEndOf="@+id/box_2"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toEndOf="@+id/ic_business_acc"
                app:layout_constraintStart_toStartOf="@+id/box_2"
                app:layout_constraintTop_toTopOf="@+id/box_2"
                app:layout_constraintVertical_bias="0.3" />

            <RadioButton
                android:id="@+id/radioButton_businessAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:button="@drawable/radio_btn"
                app:layout_constraintBottom_toBottomOf="@+id/box_2"
                app:layout_constraintEnd_toEndOf="@+id/box_2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/box_2"
                app:layout_constraintTop_toTopOf="@+id/box_2"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/box_3"
                android:layout_width="340dp"
                android:layout_height="84dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/boxlayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/box_2"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/ic_faqmily_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_familyacc"
                app:layout_constraintBottom_toBottomOf="@+id/box_3"
                app:layout_constraintEnd_toEndOf="@+id/box_3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/box_3"
                app:layout_constraintTop_toTopOf="@+id/box_3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.04"
                android:text="Family Account"
                android:textColor="#707070"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/box_3"
                app:layout_constraintEnd_toEndOf="@+id/box_3"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toEndOf="@+id/ic_faqmily_acc"
                app:layout_constraintStart_toStartOf="@+id/box_3"
                app:layout_constraintTop_toTopOf="@+id/box_3"
                app:layout_constraintVertical_bias="0.3" />

            <RadioButton
                android:id="@+id/radioButton_familyAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:button="@drawable/radio_btn"
                android:scaleX="1"
                android:scaleY="1"
                app:layout_constraintBottom_toBottomOf="@+id/box_3"
                app:layout_constraintEnd_toEndOf="@+id/box_3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/box_3"
                app:layout_constraintTop_toTopOf="@+id/box_3"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="340dp"
        android:layout_height="64dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/btn_main"
        android:text="CONTINUE"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/ic_arrow___left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_Withdraw"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

</androidx.constraintlayout.widget.ConstraintLayout>