<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.child.ChildBalanceHomeScreenFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_loging_icon_imgv"
        android:layout_width="90dp"
        android:layout_height="82dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/child_icon_new"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/girl_icon_image_child"
        android:layout_width="90dp"
        android:layout_height="82dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/girl_icon"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/child_user_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        style="@style/balance_text"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:text="Transactions"
        android:textColor="#818197"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rv_trans_child"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        style="@style/icon_texts"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text="   Transact"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/child_fragment_ballance_tv"
        style="@style/balance_text"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginTop="236dp"
        android:drawableEnd="@drawable/shekel"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textAlignment="center"
        android:textColor="#2C2C63"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        style="@style/icon_texts"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text="Tips"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_more"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/text_more"
        style="@style/icon_texts"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text="More"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView7"
        style="@style/icon_texts"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text=" Tasks"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:src="@drawable/transatct_child"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child_user_name" />

    <ImageView

        android:id="@+id/imageView6"
        style="@style/icon_sizes"
        android:layout_width="64dp"
        android:layout_height="59dp"

        android:layout_marginTop="42dp"
        android:layout_marginEnd="70dp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:src="@drawable/tips_first_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/child_user_name" />

    <ImageView
        android:id="@+id/imageView5"
        style="@style/icon_sizes"
        android:layout_marginStart="124dp"
        android:layout_marginTop="42dp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:src="@drawable/task_icon_new_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child_user_name"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView8"
        style="@style/icon_sizes"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:src="@drawable/hamburger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:src="@drawable/wizewallet_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/rv_trans_child"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child_fragment_ballance_tv" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_trans_child"
        android:layout_width="389dp"
        android:layout_height="384dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/child_user_name"
        android:layout_width="178dp"
        android:layout_height="37dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="36dp"
        android:drawableEnd="@drawable/smiley"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textColor="@color/purple_700"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dan" />

</androidx.constraintlayout.widget.ConstraintLayout>