    <EditText
        android:id="@+id/send_money_editText"
        android:layout_width="355dp"
        android:layout_height="73dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/search_bar"
        android:drawableLeft="@drawable/money_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="how much?"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/walleticon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/IV01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            app:srcCompat="@drawable/ic_arrow___left" />

        <TextView
            android:id="@+id/menu_parent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingLeft="80dp"
            android:paddingTop="30dp"
            android:paddingRight="50dp"
            android:text="Send Money"

            android:textColor="#082431"
            android:textSize="18sp" />
        <!--        android:textStyle="bold"-->

    </LinearLayout>

    <Spinner
        android:id="@+id/send_money_spinner"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <Button
        android:id="@+id/send_money_btn"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="170dp"
        android:background="@drawable/btn_main"
        android:text="Send Money"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/send_money_description_editText"
        android:layout_width="355dp"
        android:layout_height="73dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/search_bar"
        android:drawableLeft="@drawable/description_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>