<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hit.wizewalletapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:label">
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.TransactionHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.ChildBalanceScreen"
            android:exported="true" />
        <activity
            android:name=".Activities.ParentFolder.ParentBalanceScreen"
            android:exported="true" />
        <activity
            android:name=".Activities.SendMoneyScreen"
            android:exported="true" />
        <activity
            android:name=".Activities.MenuScreen"
            android:exported="true" />
        <activity
            android:name=".Activities.TipsScreen"
            android:exported="true" />

        <activity
            android:name=".Activities.ContactListScreen"
            android:exported="true" />
        <activity
            android:name=".Activities.TasksScreen"
            android:exported="true" />
        <activity
            android:name=".Activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>